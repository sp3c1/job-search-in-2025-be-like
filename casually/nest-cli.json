{
  "monorepo": true,
  "compilerOptions": {
    "webpack": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json",
        "webpack": false
      }
    },
    "import-articles": {
      "type": "application",
      "root": "apps/import-articles",
      "entryFile": "main",
      "sourceRoot": "apps/import-articles/src",
      "compilerOptions": {
        "tsConfigPath": "apps/import-articles/tsconfig.app.json"
      }
    },
    "causaly": {
      "type": "library",
      "root": "libs/causaly",
      "entryFile": "index",
      "sourceRoot": "libs/causaly/src",
      "compilerOptions": {
        "tsConfigPath": "libs/causaly/tsconfig.lib.json",
        "webpack": false
      }
    }
  }
}
